extends ./basic3columns.jade
block left
  
block content
  h3 Login
  div.row
    if alert_display
      div(class="alert alert-#{alert_type}",role="alert")
        != alert_message
  form.form-horizontal(action='/login',method='post')
    div.form-group
      label.col-sm-4.control-label(for='inputEmail3') TU Delft NetID
      div.col-sm-8
        input.form-control(type='text',name='username',placeholder='NetID',aria-describedby='basic-addon1')
    br
    div.form-group
      label.col-sm-4.control-label(for='inputEmail3') Password
      div.col-sm-8
        input.col-sm-10.form-control(type='password',name='password',placeholder='Password',aria-describedby='basic-addon2')
    br
    div.form-group
      div.col-sm-12
        div.pull-left
          input(
            type='checkbox'
            name='agreement'
            id='agreement'
            checked
          )
          label.control-label(for='agreement') &nbsp; I agree to the Terms & Conditions
        div.pull-right
          button.col-sm-12.btn.btn-default.navbar-btn(type='submit') Log in

block right
